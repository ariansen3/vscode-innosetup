{
  "name": "innosetup",
  "displayName": "Inno Setup",
  "description": "Language syntax, snippets and build system for Inno Setup",
  "version": "0.3.4",
  "publisher": "idleberg",
  "license": "MIT",
  "author": {
    "name": "Jan T. Sott",
    "url": "http://github.com/idleberg"
  },
  "keywords": [
    "inno setup",
    "innosetup",
    "installer",
    "setup",
    "windows"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idleberg/vscode-innosetup.git"
  },
  "homepage": "https://github.com/idleberg/vscode-innosetup",
  "bugs": {
    "url": "https://github.com/idleberg/vscode-innosetup/issues"
  },
  "main": "./lib/main",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:innosetup"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Inno Setup",
      "properties": {
        "innosetup.pathToIscc": {
          "type": "string",
          "default": "ISCC.exe",
          "description": "Specify the full path to `ISCC`"
        }
      }
    },
    "languages": [
      {
        "id": "innosetup",
        "aliases": [
          "Inno Setup",
          "InnoSetup",
          "innosetup"
        ],
        "extensions": [
          ".isl",
          ".iss"
        ],
        "configuration": "./inno-setup.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "innosetup",
        "scopeName": "source.inno",
        "path": "./syntaxes/inno-setup.tmLanguage"
      }
    ],
    "commands": [
      {
        "command": "extension.innosetup.compile",
        "title": "InnoSetup: Save & Compile Script"
      }
    ],
    "keybindings": [
      {
        "key": "shift+alt+b",
        "when": "editorFocus && editorLangId == innosetup",
        "command": "extension.innosetup.compile"
      }
    ],
    "snippets": [
      {
        "language": "innosetup",
        "path": "./snippets/inno-setup.json"
      }
    ]
  },
  "extensionDependencies": [
    "alefragnani.pascal"
  ],
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "gulp lint"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.0",
    "eslint": "^3.9.1",
    "gulp": "^3.9.1",
    "gulp-debug": "^3.0.0",
    "gulp-eslint": "^3.0.1",
    "gulp-jsonlint": "^1.1.2",
    "gulp-xml-validator": "^0.1.2",
    "vscode": "^1.0.3"
  }
}
